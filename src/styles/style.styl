#board
  display inline-block
  vertical-align middle
  .first-board
    width 300px
    height 300px
    background-color rgba(255,255,255, 0.4)
    border-radius 30px
    border 15px solid rgba(0,0,0,0.1)
    display inline-block
    vertical-align middle

    .cell
      position relative
      background-color rgba(0,0,0, 0.15)
      border-radius 10px
      display inline-block
      margin 3.3px
      width 80px
      height 80px
      cursor pointer
      &:hover
        background rgba(234,143,62,0.75)

    .cell-x:before,
    .cell-x:after
      content ''
      position absolute
      top 50%
      left 50%
      border-radius 3px
      width 6px
      height 50px
      background #fff
      display block

    .cell-x
      &:before
        transform translate(-50%,-50%) rotate(45deg)
      &:after
        transform translate(-50%,-50%) rotate(-45deg)

    .cell-o
      &:after
        content ''
        position absolute
        top 50%
        left 50%
        border-radius 50%
        border solid 6px #fff
        width 41px
        height 41px
        display block
        transform translate(-50%,-50%)
  
  .second-board
    width 300px
    height 300px
    background #544F4A
    .cell
      position relative
      display inline-block
      width calc(100%/3)
      height calc(100%/3)
      cursor pointer
      border 1px solid #A9A9A4
      float left
    .cell:nth-child(1)
    .cell:nth-child(2)
    .cell:nth-child(3)
      border-top none
    .cell:nth-child(3)
    .cell:nth-child(6)
    .cell:nth-child(9)
      border-right none
    .cell:nth-child(7)
    .cell:nth-child(8)
    .cell:nth-child(9)
      border-bottom none
    .cell:nth-child(1)
    .cell:nth-child(4)
    .cell:nth-child(7)
      border-left none
      
    .cell-x:before,
    .cell-x:after
      content ''
      position absolute
      top 50%
      left 50%
      border-radius 3px
      width 6px
      height 50px
      background #EEDA76
      display block

    .cell-x
      &:before
        transform translate(-50%,-50%) rotate(45deg)
      &:after
        transform translate(-50%,-50%) rotate(-45deg)

    .cell-o
      &:after
        content ''
        position absolute
        top 50%
        left 50%
        border-radius 50%
        border solid 6px #39ABD9
        width 41px
        height 41px
        display block
        transform translate(-50%,-50%)
