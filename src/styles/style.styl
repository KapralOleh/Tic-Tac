*
  box-sizing border-box

body,html
  margin 0px
  padding 0px
  height 100%
  background linear-gradient(to bottom right,#FFFF99 0%, #E4E5D7 35%, #BEE8D7 65%, #51C8C8 90%)

.theme
  background #544F4A
.vertical-align-helper
  display inline-block
  height 100%
  vertical-align middle
  width 0px
  margin-top -80px
  

.container
  height 100%
  width 100%
  text-align center
h1.winner 
  position absolute
  top 100px
  width 300px
  text-align center
  left calc(50% - 150px)
  color #51c8c8
  cursor pointer
header
  height 80px
  width 100%
  background #ff9

  h1
    padding-top 20px
    padding-left 5px
    font-family Montserrat
    margin 0
    text-align left
    float left
    color #51c8c8
  .button
    cursor pointer
    padding 5px
    background #eee
    border-radius 5px
    border none
    position absolute
    width 120px
    left calc(50% - 50px)
    color #51c8c8
    margin-top 30px
    box-shadow 2px 4px 5px 0 rgba(0, 0, 0, 0.3), -2px 2px 5px 0 rgba(0, 0, 0, 0.15)
  .turn 
    height 80px
    float right
    width 80px
    position relative
    &:before
      content "Next turn:"
      font-size 20px
      position absolute
      top 25px
      left -80px
      color #51c8c8
    .cell-x:before,
    .cell-x:after
      content ''
      position absolute
      top 50%
      left 50%
      border-radius 3px
      width 6px
      height 50px
      background red
      display block

    .cell-x
      &:before
        transform translate(-50%,-50%) rotate(45deg)
      &:after
        transform translate(-50%,-50%) rotate(-45deg)

    .cell-o
      &:after
        content ''
        position absolute
        top 50%
        left 50%
        border-radius 50%
        border solid 6px red
        width 41px
        height 41px
        display block
        transform translate(-50%,-50%)
